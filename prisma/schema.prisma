// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

type userSimple {
  id       String
  image    String
  nickname String
}

type position {
  position String
  count    Int
  accept   userSimple[]
  pending  userSimple[]
  reject   userSimple[]
}

type userSession {
  id       String
  email    String
  image    String
  name     String
  nickname String
}

type chatMessage {
  userId    String
  message   String
  createdAt DateTime @default(now())
}

model Room {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  chat        chatMessage[]
  membersId   String[]
  membersData userSimple[]
  boardId     String[]
}

model User {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  email         String   @unique
  image         String
  nickname      String   @unique
  userTechStack String[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  acceptedList  String[]
  applyList     String[]
  bookmarkList  String[]
  likeList      String[]
  like          Int      @default(0)
  myList        Board[]
  chatList      String[]
}

model Board {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  type        String
  place       String
  period      String
  application position[]
  title       String
  content     String
  author      User       @relation(fields: [authorId], references: [id])
  authorId    String     @db.ObjectId
  techStack   String[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  bookmark    Int        @default(0)
  chat        Int        @default(0)
  isClosed    Boolean    @default(false)
}

model Report {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  content   String
  createdAt DateTime @default(now())
}
